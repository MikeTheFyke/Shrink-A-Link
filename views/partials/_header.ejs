<header>
	<nav class="navbar navbar-expand-md navbar-dark bg-info" style="display: flex; justify-content: space-between">
		<a class="navbar-brand" href="/urls">Shrink-A-Link</a>
		<button
			class="navbar-toggler"
			type="button"
			data-toggle="collapse"
			data-target="#navbarNavAltMarkup"
			aria-controls="navbarNavAltMarkup"
			aria-expanded="false"
			aria-label="Toggle navigation"
		>
			<span class="navbar-toggler-icon"></span>
		</button>
		<% if (user) { %>
		<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
			<div class="navbar-nav">
				<a class="nav-item nav-link" href="/urls">My URLs</a>
				<a class="nav-item nav-link" href="/urls/new">Create New URL</a>
			</div>
		</div>
		<% } %> <% if (user) { %>
		<div class="navbar-nav">
			<span>Logged in as: <%= user.email %></span>
		</div>
		<form method="POST" action="/logout">
			<button type="submit" class="btn btn-dark" style="margin-left: 10px">Logout</button>
		</form>
		<% } else { %>
		<div id="right-nav" class="navbar-nav">
			<div style="margin-right: 10px; padding-top: 5px">
				<span>Not a member yet?</span>
			</div>
			<form method="GET" action="/register">
				<div class="input-group" style="margin-right: 10px">
					<button type="submit" class="btn btn-outline-light">Register</button>
				</div>
			</form>
			<form method="GET" action="/login">
				<div class="input-group">
					<button type="submit" class="btn btn-outline-light">Login</button>
				</div>
			</form>
		</div>
		<% } %>
	</nav>
</header>
