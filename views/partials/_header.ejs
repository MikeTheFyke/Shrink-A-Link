<header>
	<nav class="navbar navbar-expand-md navbar-dark bg-success">
		<a class="navbar-brand" href="/urls">Shrink-A-Link</a>
		<button
			class="navbar-toggler"
			type="button"
			data-toggle="collapse"
			data-target="#navbarNavAltMarkup"
			aria-controls="navbarNavAltMarkup"
			aria-expanded="false"
			aria-label="Toggle navigation"
		>
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
			<div class="navbar-nav">
				<a class="nav-item nav-link" href="/urls">My URLs</a>
				<a class="nav-item nav-link" href="/urls/new">Create New URL</a>
			</div>
		</div>
		<% if (user) { %>
		<div class="navbar-nav">
			<span>Logged in as: <%= user.email %></span>
		</div>
		<form method="POST" action="/logout">
			<button type="submit" class="btn btn-dark" style="margin-left: 10px">Logout</button>
		</form>
		<% } else { %>
		<div class="navbar-nav" style="margin-right: 10px">
			<span>Not a member yet?</span>
		</div>
		<form method="GET" action="/register">
			<div class="input-group" style="margin-right: 10px">
				<button type="submit" class="btn btn-outline-dark">Register</button>
			</div>
		</form>
		<form method="GET" action="/login">
			<div class="input-group">
				<button type="submit" class="btn btn-outline-dark">Login</button>
			</div>
		</form>
		<% } %>
	</nav>
</header>
